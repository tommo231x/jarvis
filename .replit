modules = ["nodejs-20", "web"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"cd server && npm run dev & cd client && npm run dev\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 33239
externalPort = 3003

[[ports]]
localPort = 34629
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
build = ["bash", "-c", "npm install && cd client && npm install && cd ../server && npm install && cd .. && npm run build"]
run = ["npm", "start"]
